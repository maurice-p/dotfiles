# change window focus within space
alt - down : yabai -m window --focus south
alt - up : yabai -m window --focus north
alt - left : yabai -m window --focus west
alt - right : yabai -m window --focus east

# swap windows
shift + alt - down : yabai -m window --swap south
shift + alt - up : yabai -m window --swap north
shift + alt - left : yabai -m window --swap west
shift + alt - right : yabai -m window --swap east

# move window and split
#ctrl + alt - j : yabai -m window --warp south
#ctrl + alt - k : yabai -m window --warp north
#ctrl + alt - h : yabai -m window --warp west
#ctrl + alt - l : yabai -m window --warp east

#move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;


alt - q : yabai -m space --focus 1;
alt - w : yabai -m space --focus 2;
alt - e : yabai -m space --focus 3;
alt - r : yabai -m space --focus 4;
alt - a : yabai -m space --focus 5;
alt - s : yabai -m space --focus 6;
alt - d : yabai -m space --focus 7;
alt - t : yabai -m space --focus next || yabai -m space --focus first

# move window to space
shift + alt - q : yabai -m window --space 1;
shift + alt - w : yabai -m window --space 2;
shift + alt - e : yabai -m window --space 3;
shift + alt - r : yabai -m window --space 4;
shift + alt - a : yabai -m window --space 5;
shift + alt - s : yabai -m window --space 6;
shift + alt - d : yabai -m window --space 7;


# move window to display left and right
#shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
#shift + alt - g : yabai -m window --display east; yabai -m display --focus east;

alt - f : yabai -m window --toggle zoom-fullscreen
shift + alt - f : yabai -m window --toggle float
alt - g : yabai -m window --toggle sticky

